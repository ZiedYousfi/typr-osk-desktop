[
  {
    "label": "setup",
    "command": "meson",
    "args": ["setup", "build/debug", "--reconfigure"]
  },
  {
    "label": "build",
    "command": "ninja",
    "args": ["-C", "build/debug"]
  },
  {
    "label": "run",
    "command": "./build/debug/typr-osk-desktop"
  },
  {
    "label": "build and run",
    "command": "ninja -C build/debug && ./build/debug/typr-osk-desktop"
  }
]
